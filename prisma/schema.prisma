datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  profile Profile?
}

model Profile {
  id     Int    @id @default(autoincrement())
  image  String
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}

generator client {
  provider = "prisma-client-js"
}

generator relationHelper {
  provider = "./dist/index.js"
  output   = "../generated-helpers"
}
