model User {
    id      Int      @id @default(autoincrement())
    name    String
    profile Profile?
}

model Profile {
    id     Int    @id @default(autoincrement())
    image  String
    user   User   @relation(fields: [userId], references: [id])
    userId Int
}

generator helper {
    provider = "path:../dist/index.js"
    output   = "../generated-helpers"
}
